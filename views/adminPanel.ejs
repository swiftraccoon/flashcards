<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <h2>Admin Panel</h2>
      <a href="/admin/flashcards/create" class="btn btn-success">Create New Flashcard</a>
      <ul>
        <% flashcards.forEach(flashcard => { %>
          <li>
            <%= flashcard.question %> - <a href="/admin/flashcards/<%= flashcard._id %>/edit">Edit</a> | 
            <form action="/admin/flashcards/<%= flashcard._id %>/delete" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
<%- include('partials/_footer.ejs') %>
</html>