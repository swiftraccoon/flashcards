<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <h2>Edit Flashcard</h2>
      <form action="/admin/flashcards/<%= flashcard._id %>" method="POST">
        <div class="mb-3">
          <label for="question" class="form-label">Question</label>
          <input type="text" class="form-control" id="question" name="question" value="<%= flashcard.question %>" required>
        </div>
        <div class="mb-3">
          <label for="options" class="form-label">Options (comma-separated)</label>
          <input type="text" class="form-control" id="options" name="options" value="<%= flashcard.options.join(',') %>" required>
        </div>
        <div class="mb-3">
          <label for="correctAnswer" class="form-label">Correct Answer Index</label>
          <input type="number" class="form-control" id="correctAnswer" name="correctAnswer" value="<%= flashcard.correctAnswer %>" required min="0">
        </div>
        <div class="mb-3">
          <label for="subject" class="form-label">Subject</label>
          <input type="text" class="form-control" id="subject" name="subject" value="<%= flashcard.subject %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Flashcard</button>
      </form>
    </main>
  </body>
<%- include('partials/_footer.ejs') %>
</html>